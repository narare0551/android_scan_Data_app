<androidx.core.widget.NestedScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/facnroll"
    tools:context=".FragActivity">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffba60"

        android:orientation="vertical"

        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:orientation="horizontal"
            android:paddingLeft="@dimen/horizontal_dashboard"
            android:paddingTop="@dimen/fab_margin"
            android:paddingRight="@dimen/horizontal_dashboard"

            android:weightSum="100">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="40"
                android:fontFamily="@font/bariol_bold"
                android:text="Your Innovation Starts here"
                android:textColor="@color/facnroll_white"
                android:textSize="30sp">


            </TextView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="60"
                android:src="@drawable/reader_rmvbg">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffba60">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="@null">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:background="@color/facnroll"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_firstcoureses"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/horizontal_dashboard"
                            android:layout_marginTop="@dimen/normalPadding"
                            android:layout_marginRight="@dimen/horizontal_dashboard"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <androidx.cardview.widget.CardView

                                android:layout_width="0dp"
                                android:layout_height="140dp"

                                android:layout_marginTop="@dimen/horizontal_card"
                                android:layout_marginEnd="@dimen/horizontal_card"
                                android:layout_marginRight="@dimen/horizontal_card"
                                android:layout_marginBottom="@dimen/horizontal_card"

                                android:layout_weight="1"
                                android:clickable="true"
                                android:focusable="true"

                                android:foreground="?attr/selectableItemBackground"


                                app:cardCornerRadius="@dimen/card_radius"
                                app:cardElevation="0dp"
                                app:cardPreventCornerOverlap="false">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">


                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/normalPadding"
                                        android:layout_marginTop="@dimen/top_text_card"

                                        android:layout_marginRight="@dimen/normalPadding"


                                        android:fontFamily="@font/bariol_bold"
                                        android:text="684"
                                        android:textColor="@color/darkTextColor"
                                        android:textSize="50sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/normalPadding"
                                        android:layout_marginTop="@dimen/top_text_subtitle_card"

                                        android:layout_marginRight="@dimen/normalPadding"
                                        android:layout_marginBottom="@dimen/normalPadding"

                                        android:fontFamily="@font/bariol_bold"

                                        android:text="오늘스캔횟수"
                                        android:textColor="@color/darkTextColor"
                                        android:textSize="20sp" />


                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView

                                android:layout_width="0dp"

                                android:layout_height="140dp"

                                android:layout_marginLeft="@dimen/horizontal_card"
                                android:layout_marginTop="@dimen/horizontal_card"
                                android:layout_marginBottom="@dimen/horizontal_card"

                                android:layout_weight="1"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackground"
                                app:cardCornerRadius="@dimen/card_radius"
                                app:cardElevation="@dimen/card_course_dashboard_elevation">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">


                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/normalPadding"
                                        android:layout_marginTop="@dimen/top_text_card"

                                        android:layout_marginRight="@dimen/normalPadding"


                                        android:fontFamily="@font/bariol_bold"
                                        android:text="285"
                                        android:textColor="@color/darkTextColor"
                                        android:textSize="50sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/normalPadding"
                                        android:layout_marginTop="@dimen/top_text_subtitle_card"

                                        android:layout_marginRight="@dimen/normalPadding"
                                        android:layout_marginBottom="@dimen/normalPadding"

                                        android:fontFamily="@font/bariol_bold"
                                        android:text="어제스캔횟수"
                                        android:textColor="@color/darkTextColor"
                                        android:textSize="20sp" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_secondcoureses"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/horizontal_dashboard"
                            android:layout_marginTop="@dimen/normalPadding"
                            android:layout_marginRight="@dimen/horizontal_dashboard"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"
                            android:weightSum="2">


                            <androidx.cardview.widget.CardView

                                android:layout_width="0dp"
                                android:layout_height="140dp"

                                android:layout_marginTop="@dimen/horizontal_card"
                                android:layout_marginRight="@dimen/horizontal_card"
                                android:layout_marginBottom="@dimen/horizontal_card"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:focusable="true"

                                android:foreground="?attr/selectableItemBackground"


                                app:cardCornerRadius="@dimen/card_radius"
                                app:cardElevation="0dp"
                                app:cardPreventCornerOverlap="false">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">


                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/normalPadding"
                                        android:layout_marginTop="@dimen/top_text_card"

                                        android:layout_marginRight="@dimen/normalPadding"


                                        android:fontFamily="@font/bariol_bold"
                                        android:text="112"
                                        android:textColor="@color/darkTextColor"
                                        android:textSize="50sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/normalPadding"
                                        android:layout_marginTop="@dimen/top_text_subtitle_card"

                                        android:layout_marginRight="@dimen/normalPadding"
                                        android:layout_marginBottom="@dimen/normalPadding"

                                        android:fontFamily="@font/bariol_bold"
                                        android:text="평균스캔횟수"
                                        android:textColor="@color/darkTextColor"
                                        android:textSize="20sp" />


                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView

                                android:layout_width="0dp"

                                android:layout_height="140dp"

                                android:layout_marginLeft="@dimen/horizontal_card"
                                android:layout_marginTop="@dimen/horizontal_card"
                                android:layout_marginBottom="@dimen/horizontal_card"


                                android:layout_weight="1"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackground"
                                app:cardCornerRadius="@dimen/card_radius"
                                app:cardElevation="@dimen/card_course_dashboard_elevation">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">


                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/normalPadding"
                                        android:layout_marginTop="@dimen/top_text_card"

                                        android:layout_marginRight="@dimen/normalPadding"


                                        android:fontFamily="@font/bariol_bold"
                                        android:text="24"
                                        android:textColor="@color/darkTextColor"
                                        android:textSize="50sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/normalPadding"
                                        android:layout_marginTop="@dimen/top_text_subtitle_card"

                                        android:layout_marginRight="@dimen/normalPadding"
                                        android:layout_marginBottom="@dimen/normalPadding"

                                        android:fontFamily="@font/bariol_bold"
                                        android:text="사용일수"
                                        android:textColor="@color/darkTextColor"
                                        android:textSize="20sp" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        /

                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>


