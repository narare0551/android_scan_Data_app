<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        android:background="#EFEFEF">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="93"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:orientation="vertical"
                    android:weightSum="110"
                    android:padding="5dp"
                    android:background="@drawable/setting_border">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="10"
                        android:layout_marginTop="3dp"
                        android:text="PROFILE"
                        android:textColor="#000000"
                        android:textSize="18dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="20"
                        android:background="@drawable/setting_border_row"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_marginTop="5dp"
                        android:padding="7dp">
                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="사용자"
                            android:textSize="17dp"
                            android:gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/user_info"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="이준희(admin)"
                            android:textSize="17dp"
                            android:gravity="center_vertical"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="20"
                        android:background="@drawable/setting_border_row"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:padding="7dp">
                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="모델명"
                            android:textSize="17dp"
                            android:gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/device_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="G2-BASIC"
                            android:textSize="17dp"
                            android:gravity="center_vertical"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="20"
                        android:background="@drawable/setting_border_row"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:padding="7dp">
                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="S/N"
                            android:textSize="17dp"
                            android:gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/device_sn"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="G2-4CA223"
                            android:textSize="17dp"
                            android:gravity="center_vertical"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="20"
                        android:background="@drawable/setting_border_row"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:padding="7dp">
                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="MAC 주소"
                            android:textSize="17dp"
                            android:gravity="center_vertical"/>

                        <TextView
                            android:id="@+id/device_mac"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="00:19:01:4C:A2:23"
                            android:textSize="17dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="20"
                        android:background="@drawable/setting_border_row"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:padding="7dp">
                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="배터리"
                            android:textSize="17dp"
                            android:gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/device_battery"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="100%"
                            android:textSize="17dp"
                            android:gravity="center_vertical"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/setting_border"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:weightSum="50">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="3dp"
                        android:layout_weight="10"
                        android:text="INFO"
                        android:textColor="#000000"
                        android:textSize="18dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="20"
                        android:background="@drawable/setting_border_row"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:padding="7dp">
                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="금일 바코드 스캔 횟수"
                            android:textSize="17dp"
                            android:gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/today_count"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="30회"
                            android:textSize="17dp"
                            android:gravity="center_vertical"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="20"
                        android:background="@drawable/setting_border_row"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:padding="7dp">
                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="누적 바코드 리딩 횟수"
                            android:textSize="17dp"
                            android:gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/total_count"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="100회"
                            android:textSize="17dp"
                            android:gravity="center_vertical"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:orientation="vertical"
                    android:weightSum="50"
                    android:layout_marginTop="15dp"
                    android:padding="5dp"
                    android:background="@drawable/setting_border">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="10"
                        android:layout_marginTop="3dp"
                        android:text="SETTING"
                        android:textColor="#000000"
                        android:textSize="18dp"/>
                    <LinearLayout
                        android:id="@+id/device_mode"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="20"
                        android:background="@drawable/setting_border_row"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_marginTop="5dp"
                        android:padding="7dp">
                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="모드설정"
                            android:textSize="17dp"
                            android:gravity="center_vertical"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/right_arrow"
                            android:gravity="center_vertical"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/device_time"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="20"
                        android:background="@drawable/setting_border_row"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:padding="7dp">
                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="시간설정"
                            android:textSize="17dp"
                            android:gravity="center_vertical"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/right_arrow"
                            android:gravity="center_vertical"
                            />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="6"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <Button
                android:id="@+id/sign_out"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:text="로그아웃"
                android:textStyle="bold"
                android:background="@drawable/button_border"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>